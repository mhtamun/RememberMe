<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="4"
    
     >
    
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="3.2"  >
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1.9"
        android:orientation="vertical" >
       
        <TextView
        android:id="@+id/tvAddName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textSize="15dp"
        android:textStyle="italic" />
        
        <TextView
        android:id="@+id/tvAddRelation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Relation"
        android:textSize="15dp"
        android:textStyle="italic" />
        
        <TextView
        android:id="@+id/tvAddBD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Birthday"
        android:textSize="15dp"
        android:textStyle="italic" />
        
        <TextView
        android:id="@+id/tvAddCell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Cell No."
        android:textSize="15dp"
        android:textStyle="italic" />
        
        <TextView
        android:id="@+id/tvAddEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Email"
        android:textSize="15dp"
        android:textStyle="italic" />
        
        <TextView
        android:id="@+id/tvAddAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Address"
        android:textSize="15dp"
        android:textStyle="italic" />
        
        
         </LinearLayout>
         
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1.75">
       
        <EditText
        android:id="@+id/etAddName"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="0dp"
        android:hint="Enter a Name"
        android:inputType="text"
        android:textSize="12dp"
        android:textStyle="italic" />
        
         <EditText
        android:id="@+id/etAddRelation"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="5dp"
        android:hint="Enter Relation"
        android:inputType="text"
        android:textSize="12dp"
        android:textStyle="italic" />
         
          <EditText
        android:id="@+id/etAddBD"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="3dp"
        android:hint="Enter Birthdate"
        android:inputType="date"
        android:textSize="12dp"
        android:textStyle="italic" />
          
           <EditText
        android:id="@+id/etAddCell"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dp"
        android:hint="Enter a Cell No."
        android:inputType="phone"
        android:textSize="12dp"
        android:textStyle="italic" />
           
            <EditText
        android:id="@+id/etAddEmail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="1dp"
        android:hint="Enter Email Address"
        android:inputType="textEmailAddress"
        android:textSize="12dp"
        android:textStyle="italic" />
            
             <EditText
        android:id="@+id/etAddAddress"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dp"
        android:hint="Enter Address"
        android:inputType="textMultiLine"
        android:textSize="12dp"
        android:textStyle="italic" />
            
        
        
         </LinearLayout>
         
        </LinearLayout>
        
    <Button
        android:id="@+id/btAddInfo"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Add Info"
        android:textStyle="italic" />
      
</LinearLayout>
